<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Post</h1>
      
      <div>
        <% if @post.errors.any? %>
          <h3><%= pluralize(@post.errors.count, "error") %> prohibited this obj from being saved:</h3>
          <ul>
            <% @post.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
      </div>
      
      <%= form_with model: @post do |f| %>
        <div class="form-group">
          <label for="post_title">Title</label><br>
          <%= f.text_field :title, class: "form-control" %>
        </div>
    
        <div class="form-group">
          <label for="post_opinion">Opinion</label><br>
          <%= f.text_area :review, class: "form-control" %>
        </div>
    
        <div class="form-group">
          <%= f.submit 'Update Post', class: "btn btn-success" %>
        </div>
      <% end %>
  
      <%= link_to "Show", post_path(@post.id) %>
      |
      <%= link_to "Back", posts_path %>
    </div>
  </div>
</div>
