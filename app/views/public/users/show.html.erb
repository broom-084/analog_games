<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'posts/list', user: @user, post: @post_new %>
    </div>
  
    <div class="col-md-8 offset-md-1">
      <h2>Posts</h2>
      
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
      
        <tbody>
          <% @post.each do |post| %>
            <tr>
              <td>
                <%= link_to user_path(@user.id) do %>
                  <%= image_tag post.user.get_profile_image(100,100) %>
                <% end %>
              </td>
          
              <td>
                <%= link_to post_path(post.id) do %>
                  <%= post.title %>
                <% end %>
              </td>
          
              <td>
                <%= post.body %>
              </td>
            </tr>  
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>