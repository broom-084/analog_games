<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'posts/list', user: @user, post: @post_new %>
    </div>
  
    <div class="col-md-8 offset-md-1">
      <h2>Post detail</h2>

      <table class="table">
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@user.id) do %>
                <%= image_tag @post.user.get_profile_image(100,100) %>
                <br>
                <%= @user.name %>
              <% end %>
            </td>
      
            <td>
              <%= link_to post_path(@post.id) do %>
                <%= @post.title %>
              <% end %>
            </td>
      
            <td><%= @post.body %></td>
      
            <td>
              <% if @post.user == current_user %>
                <%= link_to "Edit", edit_post_path(@post.id), class: "btn btn-sm btn-success" %>
              <% end %>
            </td>
      
            <td>
              <% if @post.user == current_user %>
                <%= link_to "Destroy", post_path(@post.id), class: "btn btn-sm btn-danger", method: :delete, "data-confirm" => "本当に消しますか?" %>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>